# MindBot Environment Variables
# Copy this file to .env and fill in your actual values
# 
# NOTE: Platform-specific adapter configurations (DingTalk, WeCom, Dify API keys)
# should be managed through the web interface at http://localhost:9529
# This file is for system-level configuration only.

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Web Dashboard Configuration
WEB_DASHBOARD_HOST=0.0.0.0
WEB_DASHBOARD_PORT=9529
WEB_DASHBOARD_DEBUG=false

# External Access Configuration
EXTERNAL_IP=your_external_ip_address
EXTERNAL_PORT=9529
EXTERNAL_DOMAIN=your_domain.com

# SSL/TLS Configuration (Optional)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# NOTE: AI provider settings (Dify, OpenAI, Qwen, etc.) should be configured
# through the web interface at http://localhost:9529
# 
# This section is kept for reference only - these variables are not used
# by the system and are here for documentation purposes.

# =============================================================================
# SYSTEM MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mindbot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
STATS_INTERVAL=60
METRICS_ENABLED=true
METRICS_EXPORT_INTERVAL=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Webhook Security
WEBHOOK_VERIFICATION_ENABLED=true
ALLOWED_IPS=127.0.0.1,::1

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:9529,https://your_domain.com

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Concurrency Settings
MAX_CONCURRENT_MESSAGES=50
MESSAGE_TIMEOUT=30.0
TASK_TIMEOUT=60.0

# Memory Management
MAX_MEMORY_USAGE=512MB
CLEANUP_INTERVAL=300

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_STREAMING=true

# Development Tools
HOT_RELOAD=false
PROFILING_ENABLED=false
